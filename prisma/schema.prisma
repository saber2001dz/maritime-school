generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  password              String?
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime
  User                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Agent {
  id             String           @id
  nomPrenom      String
  grade          String
  matricule      String           @unique
  responsabilite String
  telephone      Int
  categorie      String
  avatar         String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  AgentFormation AgentFormation[]
}

model AgentFormation {
  id                 String            @id
  agentId            String
  formationId        String
  dateDebut          String
  dateFin            String
  reference          String?
  resultat           String?
  moyenne            Float
  createdAt          DateTime          @default(now())
  updatedAt          DateTime
  sessionFormationId String?
  Agent              Agent             @relation(fields: [agentId], references: [id], onDelete: Cascade)
  Formation          Formation         @relation(fields: [formationId], references: [id], onDelete: Cascade)
  SessionFormation   SessionFormation? @relation(fields: [sessionFormationId], references: [id])

  @@index([agentId])
  @@index([formationId])
  @@index([sessionFormationId])
}

model Cours {
  id             String           @id
  titre          String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  CoursFormateur CoursFormateur[]
}

model CoursFormateur {
  id           String    @id(map: "CoursFormation_pkey")
  formateurId  String
  coursId      String
  dateDebut    String
  dateFin      String
  nombreHeures Float
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  reference    String?
  Cours        Cours     @relation(fields: [coursId], references: [id], onDelete: Cascade, map: "CoursFormation_coursId_fkey")
  Formateur    Formateur @relation(fields: [formateurId], references: [id], onDelete: Cascade, map: "CoursFormation_formateurId_fkey")

  @@index([coursId], map: "CoursFormation_coursId_idx")
  @@index([formateurId], map: "CoursFormation_formateurId_idx")
}

model Formateur {
  id             String           @id
  nomPrenom      String
  grade          String
  unite          String
  responsabilite String
  telephone      Int
  RIB            String           @db.VarChar(20)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  CoursFormateur CoursFormateur[]
}

model Formation {
  id                 String             @id
  typeFormation      String
  formation          String
  duree              String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime
  capaciteAbsorption Int?
  specialite         String?
  AgentFormation     AgentFormation[]
  SessionFormation   SessionFormation[]
}

model Session {
  id             String   @id
  userId         String
  token          String   @unique
  expiresAt      DateTime
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  impersonatedBy String?
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SessionFormation {
  id                 String           @id
  formationId        String
  dateDebut          DateTime
  dateFin            DateTime
  nombreParticipants Int              @default(0)
  reference          String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime
  statut             String?
  color              String?
  AgentFormation     AgentFormation[]
  Formation          Formation        @relation(fields: [formationId], references: [id], onDelete: Cascade)

  @@index([dateDebut])
  @@index([formationId])
}

model User {
  id            String    @id
  email         String    @unique
  name          String
  emailVerified Boolean   @default(false)
  image         String?
  role          String    @default("agent")
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  Account       Account[]
  Session       Session[]
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime
}
